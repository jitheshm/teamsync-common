{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "declaration": true,          // Ensure declaration files are generated
      "declarationMap": true        // Optional: Generate map files for declarations
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  